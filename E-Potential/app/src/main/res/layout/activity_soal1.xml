<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B71C1C"
    tools:context="com.example.iqbalmfauzan.e_potential.Soal"
    android:weightSum="1">




    <TextView
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#F44336"
        android:inputType="text"
        android:gravity="center"
        android:text="Hari Pancasila ? "
        android:id="@+id/etSoal"
        android:layout_weight="0.12"/>
    <Button
        android:id="@+id/soal1a"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:text="18 April"
        android:textColor="#212121"
        android:background="#FCE4EC"
        android:inputType="text"
        android:gravity="center" />
    <Button
        android:id="@+id/soal1b"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"
        android:layout_width="106dp"
        android:layout_height="50dp"
        android:text="17 Agustus"
        android:gravity="center"
        android:inputType="text"
        android:textColor="#212121"
        android:background="#FCE4EC"/>
    <Button
        android:id="@+id/soal1c"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="30dp"
        android:layout_width="106dp"
        android:gravity="center"
        android:layout_height="50dp"
        android:text="1 Juni"
        android:inputType="text"
        android:textColor="#212121"
        android:background="#FCE4EC" />
    <Button
        android:id="@+id/soal1d"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="200dp"
        android:layout_width="106dp"
        android:gravity="center"
        android:layout_height="50dp"
        android:text="1 Mei"
        android:inputType="text"
        android:textColor="#212121"
        android:background="#FCE4EC"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BENAR"
        android:id="@+id/tvbenar"
        android:layout_alignTop="@+id/tvsalah"
        android:layout_centerHorizontal="true"
        android:gravity="center" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SALAH"
        android:id="@+id/tvsalah"
        android:layout_centerHorizontal="true"
        android:gravity="center" />
</RelativeLayout>
